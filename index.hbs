{{!< default}}
<div class="gh-page">
    <div class="gh-container">
        {{#get 'authors' filter='slug:lionir'}}
            {{#foreach authors}}
                {{> "author-card"}} {{!-- partials/author-card.hbs --}}
            {{/foreach}}
        {{/get}}
        
        {{/primary_author}}

        <div class="gh-postfeed h-feed">
        {{#foreach posts}}

            {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
