{{!--
Re-usable card for linking to posts
--}}

<article class="h-entry feed {{visibility}} {{post_class}}">

    <time class="dt-published" datetime="{{date format="YYYY-MM-DD"}}"></time>
    <div class="feed-calendar">
        <div class="feed-calendar-month">
            {{date published_at format="MMM"}}
        </div>
        <div class="feed-calendar-day">
            {{date published_at format="DD"}}
        </div>
    </div>

    <h2 class="p-name feed-title">{{title}}</h2>

    <div class="feed-right">
        {{#if featured}}
        {{> "icons/star"}}
        {{/if}}
        <div class="feed-length">
            {{reading_time}}
        </div>
    </div>

    {{> "icons/chevron-right"}}

    <a class="u-url cover-parent" href="{{url}}" aria-label="{{title}}"></a>

</article>
